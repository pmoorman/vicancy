<div class="main">
  <div class="w-container maincontainer">
    <div class="w-row">
      <div class="w-col w-col-8 maincolumn" id="video-list">
        <!-- <h2><%= I18n.t(:'Live Vicancies') %></h2> -->
        <h2>Import from Vimeo to Wistia</h2>

        <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
        <% end %>

        <% if flash[:error] %>
        <div class="alert alert-error">
          <%= flash[:error] %>
        </div>
        <% end %>

        <%= form_for @vimeo_import, class: "form-inline" do |f| %>
          <%= f.text_field :vimeo_id, class: "input-medium", placeholder: "Vimeo ID" %>
          <%= f.text_field :url, class: "input-large", placeholder: "Video URL" %>
          <button type="submit" class="btn btn-primary">Import</button>
        <% end %>

      </div>
    </div>
  </div>
</div>